      <cron>
        <!--trigger名称-->
        <name>trigger1</name>
        <!--trigger分组-->
        <group>group1</group>
        <!--描述-->
        <description>Simple trigger to simply fire sample job</description>
        <!--绑定的job名称-->
        <job-name>job1</job-name>
        <!--绑定的job组-->
        <job-group>group1</job-group>
        <!--未按时触发时采取的策略-->
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <!--每5s执行一次-->
        <cron-expression>*/5 * * * * ?</cron-expression>
      </cron>
    </trigger>
  </schedule>
